<script src="http://listjs.com/no-cdn/list.js"></script>
<script>
var options = {
  valueNames: [ 'name', 'desc', 'category' ]
};
var userList = new List('users', options);
$('#filter-corp').click(function() {
  userList.filter(function(item) {
    if (item.values().category == "is") {
      return true;
    } else {
      return false;
    }
  });
  return false;
});
$('#filter-center').click(function() {
  userList.filter(function(item) {
    if (item.values().category == "the") {
      return true;
    } else {
      return false;
    }
  });
  return false;
});
$('#filter-none').click(function() {
  userList.filter();
  return false;
});
</script>
		
